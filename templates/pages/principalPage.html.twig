{% extends "base.html.twig" %}



{% block body %}
    <div class= "header">
        <a href="{{path('deleteUser',{id:app.user.id})}}">
            <img src= "{{ asset('/images/defaultAvatar.jpg')}}" class= "header--img"/>
        </a>
        <h3> {{app.user.alias}}</h3>
    </div>
    <div class="container" >
    <div class="row">
        {% for vehicle in vehiclesTwig %}
            <ul class="card cardContainer__ul col-xxl-1 col-md-6 col-xs-12" >
                <a href="{{path('editDetailVehiclePage', {id:vehicle.id})}}">
                    <li class="card-body cardContainer__li">{{vehicle.mark|upper}}</li>
                    <li class="card-body cardContainer__li">{{vehicle.model|upper}}</li>
                    <li class="card-body cardContainer__li">{{vehicle.identification|upper}}</li>
                    {% if vehicle.image %}
                    <li class="card-body cardContainer__li">
                        <img class="cardContainer__li--img" src={{vehicle.image}}>
                    </li>
                    {% endif %}
                </a>
            </ul>
        {% endfor %}
        <ul class="card cardContainer__ul d-flex align-items-center justify-content-center col-xxl-1 col-md-4 col-xs-12"> 
            <a href="{{path('newVehicle2')}}">
               <li class="cardContainer__plus"  >+</li>
            </a>   
        </ul>
    </div>
    </div>
  
 
  
  
  
  {% endblock %}